@*//This page to Assign a new TA for a section in the databse with its information*@

@page "/TA/Assign"

@layout CAADULayout

@using DAH_FIMS.Model
@using DAH_FIMS.Services
@using Microsoft.AspNetCore.Components.Forms

@inject FCService FCService

<title>FIMS | Assign TA</title>

<br />
<h4>Assign TA</h4>
<br />
<form action="/" method="get" id="officeAdd">
    <fieldset>
        <EditForm Model="fCourse" OnValidSubmit="AddFCourse">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <div class="form-group row">
                <label for="fId" class="col-sm-3 col-form-label"><b>TA Id:*</b></label>
                <div class="col-sm-5">
                    <input type="text" id="cnumber6" name="cnumber6" @bind="fCourse.EmployeeId">
                </div>
            </div>

            <div class="form-group row">
                <label for="fName" class="col-sm-3 col-form-label"><b>TA Name:*</b></label>
                <div class="col-sm-5">
                    <input type="text" id="cnumber6" name="cnumber6">
                </div>
            </div>

            <div class="form-group row">
                <label for="aYear" class="col-sm-3 col-form-label"><b>Academic Year:*</b></label>
                <div class="col-sm-5">
                    <input type="text" id="cnumber6" name="cnumber6" @bind="fCourse.AcademicYear">
                </div>
            </div>

            <div class="form-group row">
                <label for="semester" class="col-sm-3 col-form-label"><b>Semester:*</b></label>
                <div class="col-sm-5">
                    <select @bind="fCourse.Semester" id="semester" class="form-control">
                        <option value="">---Select a Semester---</option>
                        @foreach (var semester in Enum.GetNames(typeof(Semester)))
                        {
                            <option>@semester</option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group row">
                <label for="semester" class="col-sm-3 col-form-label"><b>Assignemnt Details:*</b></label>
                <div class="col-sm-5">
                    <div class="table-wrapper" style="overflow:auto; height:200px; width:600px">
                        <table class="table table-hover table-bordered">
                            <thead>
                                <tr class="table-warning" style="background-color:#4d0000">
                                    <th>Section Id</th>
                                    <th>Section Number</th>
                                    <th>Section Details</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><input type="text" id="cnumber" name="cnumber"></td>
                                    <td><input type="text" id="ccode" name="ccode"></td>
                                    <td><input type="text" id="ctitle" name="ctitle"></td>
                                </tr>
