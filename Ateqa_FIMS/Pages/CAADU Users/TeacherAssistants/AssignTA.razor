                                    <td><input type="text" id="ccode" name="ccode"></td>
                                    <td><input type="text" id="ctitle" name="ctitle"></td>
                                </tr>
                                <tr>
                                    <td><input type="text" id="cnumber" name="cnumber"></td>
                                    <td><input type="text" id="ccode" name="ccode"></td>
                                    <td><input type="text" id="ctitle" name="ctitle"></td>
                                </tr>
                                <tr>
                                    <td><input type="text" id="cnumber" name="cnumber"></td>
                                    <td><input type="text" id="ccode" name="ccode"></td>
                                    <td><input type="text" id="ctitle" name="ctitle"></td>
                                </tr>
                                <tr>
                                    <td><input type="text" id="cnumber" name="cnumber"></td>
                                    <td><input type="text" id="ccode" name="ccode"></td>
                                    <td><input type="text" id="ctitle" name="ctitle"></td>
                                </tr>
                                <tr>
                                    <td><input type="text" id="cnumber6" name="cnumber6"></td>
                                    <td><input type="text" id="ccode6" name="ccode6"></td>
                                    <td><input type="text" id="ctitle6" name="ctitle6"></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <label for="aYear" class="col-sm-3 col-form-label"><b>Total Workload:*</b></label>
                <div class="col-sm-5">
                    <input type="number" id="cnumber6" name="cnumber6">
                </div>
            </div>

            <div class="form-group row">
                <label for="aYear" class="col-sm-3 col-form-label"><b>Total Contact Hours:*</b></label>
                <div class="col-sm-5">
                    <input type="number" id="cnumber6" name="cnumber6" @bind="fCourse.TotalContactHours">
                </div>
            </div>

            <div class="form-group row">
                <label for="semester" class="col-sm-3 col-form-label"><b>Load Type:*</b></label>
                <div class="col-sm-5">
                    <select id="semester" class="form-control" @bind="fCourse.CourseTeachingType">
                        <option value="">---Select a Type---</option>
                        @foreach (var semester in Enum.GetNames(typeof(Semester)))
                        {
                            <option>Normal</option>
                            <option>Over-Load</option>
                            <option>Under-Load</option>
                        }
                    </select>
                </div>
            </div>
            <br />
            <br />
            <center>
                <button type="submit" class="button">Save</button>
                <a href="/TACaadu/List" class="button" role="button">Cancel</a>
            </center>
            <br />
        </EditForm>
    </fieldset>
</form>
